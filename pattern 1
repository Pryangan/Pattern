*
* * *
* * * * *
* * *
*

#include  <stdio.h>

int main(void)
{
    int i,j,n=5,num=0;
    for(i=1;i<=n-(n/2);i++)
    {
        for(j=1;j<=i+num;j++)
        {
            printf(" * ");
        }
        num=num+1;
        printf("\n");
    }
    num=2;
    for(i=(n-1)-(n/2);i>0;i--)
    {
        for(j=1;j<=n-num;j++)
        {
            printf(" * ");
        }
        num= num+2;
        printf("\n");
    }
    
    return 0;
}
